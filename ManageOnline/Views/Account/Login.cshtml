@model ManageOnline.Models.UserBasicModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card text-white bg-info" style="width: auto; height: auto; margin: 25% 25%">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <center>
                <div class="form-group">
                    <div class="col-md-12">
                        <p class="control-label">Login</p>
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <p class="control-label">Hasło</p>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 center">
                        <h5 class="text-danger">@ViewBag.Message</h5>
                        <input type="submit" value="Zaloguj się" class="btn btn-default"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 center">
                        <input type="button" value="Zarejestruj się" class="btn btn-default" onclick="location.href='Register'" />
                    </div>
                </div>
            </center>
        </div>
    }
</div>
