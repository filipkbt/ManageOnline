@model ManageOnline.Models.UserBasicModel
<div class="modal fade text-dark" id="addManager" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    @using (Html.BeginForm("AddManagerAccount", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Dodaj menadżera</b></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <center>
                        <div class="form-group">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12" style="max-width: 70%;">
                                <p class="control-label"><h5><b>Login</b></h5></p>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" style="max-width: 70%;">
                                <p class="control-label"><h5><b>Email</b></h5></p>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" style="max-width: 70%;">
                                <p class="control-label"><h5><b>Hasło</b></h5></p>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" style="max-width: 70%;">
                                <p class="control-label"><h5><b>Potwierdź hasło</b></h5></p>
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </center>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                            <button type="submit" class="btn btn-success">Dodaj menadżera</button>
                            <h1>@ViewBag.Message</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
    <div class="bg-info" data-role="tile" data-size="wide" data-toggle="modal" data-target="#addManager">
        <img class="icon" src="~/Content/Images/icons8-menedżer-100.png">
        <div class="text-white text-center branding-bar">Dodaj menadżera</div>
    </div>

