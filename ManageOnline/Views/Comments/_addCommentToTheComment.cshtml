@model ManageOnline.Models.CommentModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => Model.CommentConnectedWithSelectedComment.CommentId)
    @Html.HiddenFor(model => Model.ProjectWhereCommentBelong.ProjectId)
    <div class="form-group ">
        <div class="col-11">
            @Html.TextAreaFor(model => model.CommentDescription, new { htmlAttributes = new { @class = "form-control", @cols = 10, @rows = 10 } })
            @Html.ValidationMessageFor(model => model.CommentDescription, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 justify-content-center">
            <input type="submit" value="Dodaj komentarz" class="btn btn-submit" />
        </div>
    </div>
</div>
}

