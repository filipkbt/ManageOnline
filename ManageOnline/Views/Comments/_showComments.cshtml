@model IEnumerable<ManageOnline.Models.CommentModel>

<div class="row bootstrap snippets">
    <div class="col col-md-offset-2 ">
        <div class="comment-wrapper">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3>Komentarze</h3>
                </div>
