@model ManageOnline.Models.MessageModel

@using (Html.BeginForm("SendMessageToAllUsers", "Messages", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal fade text-dark" id="sendMessageToAllUsers" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><b>Wyślij wiadomość do wszystkich użytkowników portalu</b></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(x => x.Receiver.UserId)
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-12">
                                <h4>Tytuł</h4>
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <h4>Treść</h4>
                                @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control col", @cols = "100", @rows = "8" } })
                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Anuluj</button>
                        <button type="submit" class="btn btn-primary">Wyślij wiadomość</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-info" data-role="tile" data-size="wide" data-toggle="modal" data-target="#sendMessageToAllUsers">
        <img class="icon" src="~/Content/Images/icons8-new-message-100.png">
        <div class="text-white text-center branding-bar">Wiadomość do wszystkich</div>
    </div>
}



