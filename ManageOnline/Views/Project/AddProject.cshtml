@model ManageOnline.Models.ProjectModel

@{
    ViewBag.Title = "AddProject";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<script type="text/javascript">
    $(function () {
        $("#multiSelectDropDown").chosen();
    });
</script>
<h2>AddProject</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ProjectModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProjectBudget, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProjectBudget, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProjectBudget, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <p class="control-label">Rodzaj projektu</p>
                @Html.DropDownListFor(model => model.ProjectCategory, ViewBag.Categories as IEnumerable<SelectListItem>))
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <p class="control-label">Wymagane umiejętnoścu</p>
                @Html.ListBoxFor(model => model.SkillsRequiredToProjectArray, ViewBag.Skills as MultiSelectList, new { id = "multiSelectDropDown", multiple = "multiple" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj projekt" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        $("#multiSelectDropDown").chosen();
    </script>
}
