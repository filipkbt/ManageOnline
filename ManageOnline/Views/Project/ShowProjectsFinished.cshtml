@model IEnumerable<ManageOnline.Models.ProjectModel>

@{
    ViewBag.Title = "ShowProjectsFinished";
    if (HttpContext.Current.Session["Role"].ToString() == "Admin")
    {
        Layout = "~/Views/Shared/_AdminDashboard.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Dashboard.cshtml";
    }
}
<div class="card">
    @if (HttpContext.Current.Session["Role"].ToString() == "Admin")
    {
        <div class="card-header bg-dark text-white text-center"><h1><b>Projekty</b></h1></div>
    }
    else
    {
        <div class="card-header"><h1><b>Twoje projekty</b></h1></div>
    }
    <div class="btn-group btn-group-justified col" style="margin-top:15px;">
        <a onclick="location.href = '@Url.Action( "ShowProjectsWaitingForOffers", "Project")'" class="btn btn-primary btn-sm mr-3 text-white text-bold" style="width:100%">Pokaż projekty oczekujące na wybranie oferty</a>
        <a onclick="location.href = '@Url.Action("ShowProjectsInProgress", "Project")'" class="btn btn-primary btn-sm mr-3 text-white text-bold" style="width:100%">Pokaż projekty w trakcie</a>
        <a onclick="location.href = '@Url.Action("ShowProjectsFinished", "Project")'" class="btn btn-success btn-sm mr-3 text-white text-bold" style="width:100%">Pokaż zakończone projekty</a>
    </div>
    <div class="card-body">
        <table class="table table-hover" style="margin-top:30px">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        Klient
                    </th>
                    <th scope="col">
                        Tytuł
                    </th>
                    <th scope="col">
                        Budżet
                    </th>
                    <th scope="col">
                        Data publikacji
                    </th>
                    <th scope="col">
                        Kategoria
                    </th>
                    <th scope="col">
                        Umiejętności
                    </th>
                </tr>
            </thead>
            <tbody>



                @foreach (var item in Model)
                {
                    if (item.ProjectStatus == ManageOnline.Models.ProjectStatus.Finished)
                    {
                        <tr onclick="location.href = '@Url.Action("ProjectPanel", "ProjectPanel",  new { projectId=item.ProjectId}, null)'" style="cursor:pointer">
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectOwner.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectBudget)zł
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectCreationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectCategory.CategoryName)
                            </td>
                            <td>
                                @if (item.SkillsRequiredToProjectCollection != null)
                                {
                                    foreach (var skill in item.SkillsRequiredToProjectCollection)
                                    {
                                        @skill.SkillName@:;
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>