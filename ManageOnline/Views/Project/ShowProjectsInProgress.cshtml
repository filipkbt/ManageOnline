@model IEnumerable<ManageOnline.Models.ProjectModel>

@{
    ViewBag.Title = "ShowProjectsInProgress";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="btn-group btn-group-justified" style="margin-top: 30px">
    <a onclick="location.href = '@Url.Action( "ShowProjectsWaitingForOffers", "Project")'" class="btn btn-primary btn-sm mr-3 text-white text-bold" style="width:100%">Pokaż projekty oczekujące na wybranie oferty</a>
    <a onclick="location.href = '@Url.Action("ShowProjectsInProgress", "Project")'" class="btn btn-success btn-sm mr-3 text-white text-bold" style="width:100%">Pokaż projekty w trakcie</a>
    <a onclick="location.href = '@Url.Action("ShowProjectsFinished", "Project")'" class="btn btn-primary btn-sm mr-3 text-white text-bold" style="width:100%">Pokaż zakończone projekty</a>
</div>

<table class="table table-hover" style="margin-top:30px">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                Klient
            </th>
            <th scope="col">
                Tytuł
            </th>
            <th scope="col">
                Budżet
            </th>
            <th scope="col">
                Data publikacji
            </th>
            <th scope="col">
                Data rozpoczęcia
            </th>
            <th scope="col">
                Status
            </th>
            <th scope="col">
                Kategoria
            </th>
            <th scope="col">
                Umiejętności
            </th>
        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
            if (item.ProjectStatus == ManageOnline.Models.ProjectStatus.InProgress)
            {
                <tr onclick="location.href = '@Url.Action("ProjectDetails", "Project",  new { id=item.ProjectId}, null)'">
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectOwner.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectBudget)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectCreationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriesModel.CategoryName)
                    </td>
                    <td>
                        @if (item.SkillsRequiredToProjectCollection != null)
                        {
                            foreach (var skill in item.SkillsRequiredToProjectCollection)
                            {
                                @skill.SkillName@:;
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
