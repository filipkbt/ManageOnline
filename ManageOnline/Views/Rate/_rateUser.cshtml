@model ManageOnline.Models.RateModel

@using (Html.BeginForm("RateUser", "Rate", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal fade" id="addRateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Oceń użytkownika</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(x => x.Project.ProjectId)
                    @Html.HiddenFor(x => x.UserWhoGetRate.UserId)
                    dostaje
                    @Model.UserWhoGetRate.Username
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <h4><b>Komentarz</b></h4>
                            <div class="col-12">
                                @Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-6">
                                <h3><b>Komunikacja</b></h3>
                                <input name="Communication"data-role="rating" data-star-color="cyan" data-stared-color="cyan" value="@Model.Communication">
                            </div>
                        </div>
                    </div>

                </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Wystaw ocenę użytkownikowi</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
}

    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addRateModal">
        Oceń użytkownika
    </button>
