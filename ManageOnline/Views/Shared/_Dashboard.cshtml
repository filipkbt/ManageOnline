<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="metro4:init" content="true">
    <meta name="metro4:locale" content="pl-PL">
    <meta name="metro4:week_start" content="1">
    <link rel="stylesheet" href="https://cdn.metroui.org.ua/v4/css/metro-all.min.css">

    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<script src="https://cdn.metroui.org.ua/v4/js/metro.min.js"></script>

@if (String.IsNullOrEmpty((string) HttpContext.Current.Session["Username"]))
{
    <div class="container body-content">
        <button type="button" class="btn" text="Zaloguj się!" onclick="location.href = '@Url.Action("Login", "Account")'"/>
    </div>
    RenderBody();
}
else if (!String.IsNullOrEmpty((string) HttpContext.Current.Session["Username"]))
{
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <li class="navbar-brand">Navbar</li>
        <li class="btn-group nav" style="float: right;">
            <button type="button" class="btn navbar-btn" style="background-color: forestgreen">Współpracownicy</button>
            <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
               @Html.ActionLink("Przeglądaj pracowników", "EmployeesList", "Employees")
                @if ((string) HttpContext.Current.Session["Role"] == "Klient")
                {
                    <li class="navbar-brand">Managerzy, z którymi współpracujesz@*@Html.ActionLink("Wyszukaj projekty", "SearchProjects", "Project")*@</li>
                }
            </ul>
        </li>
        <li class="btn-group nav" style="float: right;">
            <button type="button" class="btn navbar-btn" style="background-color: forestgreen">Projekty</button>
            <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
                @if ((string) HttpContext.Current.Session["Role"] == "Manager" || (string) HttpContext.Current.Session["Role"] == "Klient")
                {
                    <li class="navbar-brand">@Html.ActionLink("Wyszukaj projekty", "SearchProjects", "Project")</li>
                }
                @if ((string) HttpContext.Current.Session["Role"] == "Klient")
                {
                    <li class="navbar-brand">@Html.ActionLink("Dodaj projekt", "AddProject", "Project",  new { id = Convert.ToInt32(HttpContext.Current.Session["UserId"]) }, null)</li>
                }
            </ul>
        </li>
        <li class="btn-group nav" style="float: right;">
            <button type="button" class="btn navbar-btn" style="background-color: forestgreen">@HttpContext.Current.Session["Username"]</button>
            <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li class="navbar-brand">@Html.ActionLink("Edytuj profil", "EditAccount", "Account")</li>
                <li class="navbar-brand">@Html.ActionLink("Zobacz profil", "ProfileDetails", "Account", new {id = Convert.ToInt32(HttpContext.Current.Session["UserId"])}, null)</li>
                <li class="navbar-brand">@Html.ActionLink("Wyloguj się", "LogOut", "Account")</li>
            </ul>
        </li>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
}



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/metroui")
@Scripts.Render("~/bundles/chosen")
@RenderSection("scripts", required: false)
</body>
</html>
