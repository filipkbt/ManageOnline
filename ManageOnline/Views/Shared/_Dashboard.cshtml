<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (String.IsNullOrEmpty((string)HttpContext.Current.Session["Username"]))
    {
    <div class="container body-content">
        <button type="button" class="" text="Zaloguj się!" onclick="location.href='@Url.Action("Login", "Account")'" />
    </div>
        RenderBody();
    }
    else if (!String.IsNullOrEmpty((string)HttpContext.Current.Session["Username"]))
    {
        <div class="navbar navbar-expand-lg navbar-light bg-light">
            <li class="navbar-brand">Navbar</li>

            <li class="btn-group nav">
                <button type="button" class="btn navbar-btn" style="background-color: forestgreen">@HttpContext.Current.Session["Username"]</button>
                <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li class="navbar-brand">@Html.ActionLink("Edytuj profil", "EditAccount", "Account")</li>
                    <li class="navbar-brand"><a href="#">Zobacz profil</a></li>
                    <li class="navbar-brand">@Html.ActionLink("Wyloguj się", "LogOut", "Account")</li>
                </ul>
            </li>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div>
    }



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
